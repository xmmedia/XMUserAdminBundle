{% extends 'Mail/base.html.twig' %}

{% trans_default_domain 'XMSecurityBundle' %}

{% block subject %}Welcome to {{ 'xm_security.parameter.name'|trans }}{% endblock %}

{% block body_text_inner %}{% endblock %}

{% block body_html_inner %}
    <p>Welcome to {{ 'xm_security.parameter.name'|trans }}</p>

    <p>An account with the following credentials has been created for you. You can login at <a href="{{ uri }}">{{ uri }}</a></p>

    <div style="margin-left: 20px;">
        Username: {{ user.username }}<br>
        Password: <em>Please contact {{ 'xm_security.parameter.name'|trans }} for your password.</em>
    </div>
{% endblock body_html_inner %}