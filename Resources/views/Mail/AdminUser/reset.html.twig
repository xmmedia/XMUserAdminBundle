{% extends 'Mail/base.html.twig' %}

{% trans_default_domain 'XMSecurityBundle' %}

{% block subject %}Your {{ 'xm_security.parameter.name'|trans }} Password{% endblock %}

{% block body_text_inner %}{% endblock %}

{% block body_html_inner %}
    <p>Hello,</p>
    <p>A password reset has been requested by an administrator. Clicking the link below will take you to a secure site from which you can set a new password.</p>
    <a href="{{ uri }}" style="display: block; max-width: 250px; margin: 25px auto; padding: 12px; background: #008000; color: #fff; font-size: 18px; font-weight: bold; text-align: center; text-decoration: none; border-radius: 5px;">Reset Your Password</a>
    <p>Your username is: {{ user.username }}</p>
{% endblock body_html_inner %}